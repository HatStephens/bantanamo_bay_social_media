<% if flash[:notice] %>
		<section class='flash-notice'>
			<%= flash[:notice] %>
		</section>
	<% end %>

	<% if flash[:errors] && !flash[:errors].empty? %>
		<section class='flash-notice'>
	  <p>Sorry, there were the following problem(s) with the form:</p><br>
	  <ul id='errors'>
	  	<% flash[:errors].each do |error| %>
	  		<li><%= error %></li>
			<% end %>
		</ul>
		</section>
<% end %>